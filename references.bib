@online{syrotchen2023,
  title = {Local Adaptation to an Altitudinal Gradient: The Interplay between Mean Phenotypic Trait Variation and Phenotypic Plasticity in {{{\emph{Mimulus}}}}{\emph{ Laciniatus}}},
