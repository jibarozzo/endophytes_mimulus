  journaltitle = {Ecology},
  volume = {82},
  number = {1},
  eprint = {https://esajournals.onlinelibrary.wiley.com/doi/pdf/10.1890/0012-9658%282001%29082%5B0290%3AFMMTCD%5D2.0.CO%3B2},
