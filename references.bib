@article{gonzalez-teuber2016,
  title = {The Defensive Role of Foliar Endophytic Fungi for a {{South American}} Tree},
  author = {González-Teuber, Marcia},
  date = {2016-01-01},
  journaltitle = {AoB PLANTS},
