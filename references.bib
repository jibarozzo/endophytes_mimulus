@article{ferris2016,
  title = {A Hot Topic: {{The}} Genetics of Adaptation to Geothermal Vents in {{Mimulus}} Guttatus},
  author = {Ferris, Kathleen G.},
  date = {2016},
  journaltitle = {Molecular Ecology},
  volume = {25},
